<%= form_for @store do |f| %>

  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@store.errors.count, "error") %>
        prohibited this store from being saved:
      </h2>
      <ul>
        <% @store.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.submit %>
  </p>

<% end %>
